upstream public_server {
    server public:80;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    root /var/www/html;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /shop/ {
        proxy_pass http://public_server;
    }
    
    location /member/ {
        proxy_pass http://public_server;
    }

    location /static/ {
        proxy_pass http://public_server;
    }
}
