{
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "compilerOptions": {
        "target": "es6",
        "lib": ["es5", "es6", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
    },
}
