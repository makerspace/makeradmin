{
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "target": "es6",
        "lib": ["es5", "es6", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "esnext",
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true
    }
}
