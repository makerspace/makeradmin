FROM python:3.11-alpine@sha256:004b4029670f2964bb102d076571c9d750c2a43b51c13c768e443c95a71aa9f3

RUN apk update \
    && apk add \
        bash \
        netcat-openbsd \
        less \
        curl \
        build-base \
        python3-dev \
        libffi-dev \
        libressl-dev \
        linux-headers \
        jpeg-dev \
        zlib-dev \
    && rm -rf /var/cache/apk/*

RUN mkdir -p /work/

WORKDIR /work

COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

COPY pyproject.toml uv.lock /work/
RUN uv sync --frozen

# Activate the virtual environment for subsequent commands
ENV PATH="/work/.venv/bin:$PATH"

COPY config /config
COPY api/test_run.sh .

COPY api/src ./src
