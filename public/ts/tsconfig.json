{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es5", "es6", "dom"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true
    },
    "include": [
        "*.ts", "*.tsx"
    ]
}
